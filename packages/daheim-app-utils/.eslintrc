{
  "parser": "babel-eslint",
  "extends": "standard",
  "plugins": ["babel", "standard"],
  "rules": {
    "linebreak-style": [0, "unix"],

    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 2,
    "babel/arrow-parens": 2,

    "babel/new-cap": 2,
    "babel/array-bracket-spacing": 2,
    "babel/object-shorthand": 2,
    "babel/no-await-in-loop": 2
  }
}
